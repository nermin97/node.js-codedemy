<% layout('boilerplate') %>

<div class="container" style="margin: auto;">
  <div class="row" style="margin: auto;">
    <div style="margin: auto;" class="col-lg-6 col-md-offset-3">
      <h1>Create Course</h1>
      <form role="form" method="post">
        <div class="form-group">
          <label style="width: 150px;" for="name">Title:</label>
          <Input
            style="width: 300px;"
            type="text"
            class="form-content"
            name="title"
            id="title"
            value="<%= course.title %>"
          />
        </div>
        <div class="form-group">
          <label style="width: 150px;" for="name">Price:</label>
          <Input
            style="width: 300px;"
            type="number"
            class="form-content"
            name="price"
            id="title"
            value="<%= course.price %>"
          />
        </div>
        <div class="form-group">
          <label style="width: 150px;" for="name">Description:</label>
          <Input
            style="width: 300px;"
            type="text"
            class="form-content"
            name="desc"
            id="title"
            value="<%= course.desc %>"
          />
        </div>
        <div class="form-group">
          <label style="width: 150px;" for="name">Wistia ID:</label>
          <Input
            style="width: 300px;"
            type="text"
            class="form-content"
            name="wistiaId"
            id="title"
            value="<%= course.wistiaId %>"
          />
        </div>

        <button style="width: 120px;" type="submit" class="btn btn-success">
          Submit
        </button>
        <a
          class="btn btn-danger"
          type="button"
          style="width: 120px; float: right;"
          href="/teacher/dashboard"
          >Cancel</a
        >
      </form>
    </div>
  </div>
</div>
